# Chatbot Platform Environment Configuration Template
# Copy this file to .env and customize for your environment

# Node environment: development, test, production
NODE_ENV=development

# Server configuration
PORT=3000
HOST=localhost
CORS_ORIGIN=*

# Database configuration
MONGODB_URI=mongodb://localhost:27017/chatbots
MONGO_USER=
MONGO_PASSWORD=
MONGO_AUTH_SOURCE=admin

# Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS=false

# JWT configuration
JWT_SECRET=your_jwt_secret_here
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
JWT_EXPIRATION=1h
REFRESH_TOKEN_EXPIRATION=7d

# External API keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_DEFAULT_MODEL=gpt-4
AZURE_COGNITIVE_SERVICES_KEY=your_azure_key_here
AZURE_REGION=eastus

# S3 configuration
S3_BUCKET=chatbots-development
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your_access_key_id_here
S3_SECRET_ACCESS_KEY=your_secret_access_key_here

# Proxy configuration
PROXY_PROTOCOL=http
PROXY_HOST=104.129.196.38
PROXY_PORT=10563

# Logging configuration
LOG_LEVEL=info

# Feature flags
ENABLE_ANALYTICS=true
ENABLE_RATE_LIMITING=true
