{
  "name": "customizable-chatbots",
  "version": "0.1.0",
  "description": "A modern, flexible platform for creating and deploying customizable chatbots with advanced AI capabilities",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=src/tests/unit",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:e2e:playwright": "playwright test",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit",
    "test:performance": "node src/tests/performance/run-performance-tests.js",
    "test:load": "artillery run src/tests/performance/load/load-test.yml",
    "test:uat": "node src/scripts/run-uat-tests.js",
    "test:uat:chrome": "node src/scripts/run-uat-tests.js --browser=chromium",
    "test:uat:firefox": "node src/scripts/run-uat-tests.js --browser=firefox",
    "test:uat:safari": "node src/scripts/run-uat-tests.js --browser=webkit",
    "test:uat:mobile": "node src/scripts/run-uat-tests.js --browser='Mobile Chrome'",
    "test:smoke:staging": "playwright test --config=playwright.staging.config.js --grep=@smoke",
    "test:smoke:production": "playwright test --config=playwright.production.config.js --grep=@smoke",
    "test:e2e:staging": "playwright test --config=playwright.staging.config.js",
    "lint": "eslint .",
    "format": "prettier --write 'src/**/*.{js,jsx}'",
    "bug-sweep": "node src/scripts/run-bug-sweep.js",
    "security-audit": "node src/scripts/run-security-audit.js",
    "voice:security-audit": "node utils/run-voice-security-audit.js",
    "voice:fix-security": "node scripts/run-security-fixes.js",
    "voice:acceptance-test": "jest tests/acceptance/voice-interface.test.js",
    "voice:check-mvp": "node scripts/check-voice-mvp-status.js",
    "performance-optimization": "node src/scripts/run-performance-optimization.js",
    "performance-optimization:apply": "node src/scripts/run-performance-optimization.js --apply-optimizations",
    "setup-uat": "node src/scripts/setup-uat-environment.js",
    "setup-uat:sample-data": "node src/scripts/setup-uat-environment.js --sample-data",
    "setup-uat:reset": "node src/scripts/setup-uat-environment.js --reset --sample-data",
    "start:production": "NODE_ENV=production node src/index.js",
    "pre-release-check": "npm run lint && npm run test && npm run bug-sweep && npm run security-audit && npm run voice:security-audit && npm run performance-optimization",
    "build": "webpack --mode production",
    "deploy:staging": "node scripts/deploy-staging.js",
    "deploy:production": "node scripts/deploy-production.js",
    "verify:staging": "ENVIRONMENT=staging node scripts/verify-deployment.js",
    "verify:production": "ENVIRONMENT=production node scripts/verify-deployment.js",
    "generate-deployment-report": "node scripts/generate-deployment-report.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pavleee23/chatbots.git"
  },
  "keywords": [
    "chatbot",
    "ai",
    "nlp",
    "conversational-ai",
    "customizable"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Pavleee23/chatbots/issues"
  },
  "homepage": "https://github.com/Pavleee23/chatbots#readme",
  "dependencies": {
    "axios": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/jest": "^29.5.11",
    "adm-zip": "^0.5.16",
    "artillery": "^2.0.0",
    "aws-sdk": "^2.1520.0",
    "chai": "^5.2.0",
    "cypress": "^13.6.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-mock-extended": "^3.0.5",
    "mongodb-memory-server": "^9.1.1",
    "multer": "^2.0.0",
    "nock": "^13.4.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "sinon": "^17.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
