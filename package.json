{
  "name": "customizable-chatbots",
  "version": "0.1.0",
  "description": "A modern, flexible platform for creating and deploying customizable chatbots with advanced AI capabilities",
  "main": "src/index.js",
  "_moduleAliases": {
    "@src": "src",
    "@core": "src/core",
    "@modules": "src/modules",
    "@api": "src/api",
    "@data": "src/data",
    "@domain": "src/domain",
    "@utils": "src/utils"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --config configs/jest/jest.integration.config.js",
    "test:e2e": "jest --config configs/jest/jest.e2e.config.js",
    "test:memory": "cross-env NODE_ENV=test USE_MEMORY_SERVER=true jest --config configs/jest/jest.memory.config.js",
    "test:e2e:playwright": "playwright test",
    "test:coverage": "jest --coverage",
    "test:coverage:html": "jest --coverage --coverageReporters=html",
    "test:coverage:json": "jest --coverage --coverageReporters=json-summary",
    "test:coverage:lcov": "jest --coverage --coverageReporters=lcov",
    "test:coverage:threshold": "jest --coverage --coverageThreshold='{\"global\":{\"statements\":99,\"branches\":95,\"functions\":99,\"lines\":99}}'",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit",
    "test:performance": "node src/tests/performance/run-performance-tests.js",
    "test:load": "artillery run src/tests/performance/load/load-test.yml",
    "test:security": "npm audit && node scripts/security-tests.js",
    "test:uat": "node src/scripts/run-uat-tests.js",
    "test:uat:chrome": "node src/scripts/run-uat-tests.js --browser=chromium",
    "test:uat:firefox": "node src/scripts/run-uat-tests.js --browser=firefox",
    "test:uat:safari": "node src/scripts/run-uat-tests.js --browser=webkit",
    "test:uat:mobile": "node src/scripts/run-uat-tests.js --browser='Mobile Chrome'",
    "test:smoke:staging": "playwright test --config=playwright.staging.config.js --grep=@smoke",
    "test:smoke:production": "playwright test --config=playwright.production.config.js --grep=@smoke",
    "test:e2e:staging": "playwright test --config=playwright.staging.config.js",
    "test:all": "node scripts/test-coverage-runner.js",
    "test:gap-analysis": "node scripts/test-gap-analyzer.js",
    "test:ui": "playwright test --config=playwright.config.js",
    "test:accessibility": "pa11y-ci",
    "lint": "eslint .",
    "format": "prettier --write 'src/**/*.{js,jsx}'",
    "bug-sweep": "node src/scripts/run-bug-sweep.js",
    "security-audit": "node src/scripts/run-security-audit.js",
    "voice:security-audit": "node utils/run-voice-security-audit.js",
    "voice:fix-security": "node scripts/run-security-fixes.js",
    "voice:acceptance-test": "jest tests/acceptance/voice-interface.test.js",
    "voice:check-mvp": "node scripts/check-voice-mvp-status.js",
    "performance-optimization": "node src/scripts/run-performance-optimization.js",
    "performance-optimization:apply": "node src/scripts/run-performance-optimization.js --apply-optimizations",
    "setup-uat": "node src/scripts/setup-uat-environment.js",
    "setup-uat:sample-data": "node src/scripts/setup-uat-environment.js --sample-data",
    "setup-uat:reset": "node src/scripts/setup-uat-environment.js --reset --sample-data",
    "start:production": "NODE_ENV=production node src/index.js",
    "pre-release-check": "npm run lint && npm run test && npm run bug-sweep && npm run security-audit && npm run voice:security-audit && npm run performance-optimization",
    "build": "webpack --config webpack.config.js",
    "deploy:staging": "node scripts/deploy-staging.js",
    "deploy:production": "node scripts/deploy-production.js",
    "verify:staging": "ENVIRONMENT=staging node scripts/verify-deployment.js",
    "verify:production": "ENVIRONMENT=production node scripts/verify-deployment.js",
    "generate-deployment-report": "node scripts/generate-deployment-report.js",
    "build:dev": "webpack --config webpack.config.js --mode development",
    "build:prod": "webpack --config webpack.config.js --mode production",
    "lint:fix": "eslint . --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pavleee23/chatbots.git"
  },
  "keywords": [
    "chatbot",
    "ai",
    "nlp",
    "conversational-ai",
    "customizable"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Pavleee23/chatbots/issues"
  },
  "homepage": "https://github.com/Pavleee23/chatbots#readme",
  "dependencies": {
    "axios": "^1.9.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "express-rate-limit": "^7.5.0",
    "jsonwebtoken": "^9.0.2",
    "marked": "^15.0.12",
    "morgan": "^1.10.0",
    "redis": "^5.5.6",
    "sentiment": "^5.0.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/plugin-transform-runtime": "^7.27.3",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/runtime": "^7.27.3",
    "@playwright/test": "^1.40.1",
    "@types/jest": "^29.5.11",
    "adm-zip": "^0.5.16",
    "artillery": "^2.0.0",
    "aws-sdk": "^2.1520.0",
    "babel-loader": "^10.0.0",
    "body-parser": "^2.2.0",
    "chai": "^5.2.0",
    "clean-webpack-plugin": "^4.0.0",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "cypress": "^13.6.1",
    "dotenv": "^16.5.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-node": "^11.1.0",
    "express": "^5.1.0",
    "file-loader": "^6.2.0",
    "helmet": "^8.1.0",
    "html-webpack-plugin": "^5.6.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-mock-extended": "^3.0.5",
    "lint-staged": "^16.1.0",
    "mini-css-extract-plugin": "^2.9.2",
    "module-alias": "^2.2.3",
    "mongodb-memory-server": "^9.5.0",
    "mongoose": "^8.15.1",
    "multer": "^2.0.0",
    "nock": "^13.4.0",
    "nodemon": "^3.0.2",
    "playwright": "^1.52.0",
    "prettier": "^3.5.3",
    "sinon": "^17.0.1",
    "style-loader": "^4.0.0",
    "supertest": "^6.3.4",
    "terser-webpack-plugin": "^5.3.14",
    "ts-jest": "^29.1.1",
    "webpack": "^5.99.9",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2",
    "winston": "^3.17.0"
  }
}
